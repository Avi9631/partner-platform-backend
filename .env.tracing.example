# OpenTelemetry Tracing Environment Variables
# Add these to your .env or prod.env file

# ==============================================================================
# OpenTelemetry Configuration
# ==============================================================================

# Service name that will appear in your tracing backend (Jaeger/Tempo)
OTEL_SERVICE_NAME=partner-platform-backend

# OTLP HTTP endpoint where traces will be exported
# Local Jaeger: http://localhost:4318/v1/traces
# Local Tempo: http://localhost:4318/v1/traces
# Grafana Cloud: https://tempo-xxx.grafana.net/otlp/v1/traces
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Optional: Custom headers for OTLP exporter (e.g., for authentication)
# Uncomment and modify if using Grafana Cloud or other managed service
# OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer YOUR_API_TOKEN

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ==============================================================================
# Notes
# ==============================================================================
# 
# 1. For local development with Jaeger:
#    OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
#
# 2. For Grafana Cloud (Tempo):
#    OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp-gateway-prod-us-central-0.grafana.net/otlp/v1/traces
#    OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic BASE64_ENCODED_CREDENTIALS
#
# 3. For production, consider enabling sampling to reduce trace volume:
#    Edit src/config/tracing.js to add TraceIdRatioBasedSampler
#
